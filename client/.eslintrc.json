{
  "ignorePatterns": ["node_modules", "styles/css"],
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": ["plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "plugins": ["prettier"],
  "rules": {
    "linebreak-style": ["error", "windows"],
    "no-unused-vars": 0,
    "no-undef": 0,
    "no-underscore-dangle": 0,
    "no-plusplus": 0
  }
}
